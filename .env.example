# Database
DATABASE_URL=postgresql://accusync:accusync_pass@localhost:5432/accusync
POSTGRES_USER=accusync
POSTGRES_PASSWORD=accusync_pass
POSTGRES_DB=accusync

# Redis
REDIS_URL=redis://localhost:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Storage (S3 compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=accusync-storage
S3_REGION=us-east-1

# AI Configuration
AI_PROVIDER=openai  # openai, claude, google_document_ai, multi
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-claude-key
GOOGLE_CREDENTIALS_PATH=/path/to/google-credentials.json
GOOGLE_PROJECT_ID=your-project-id

# AI Feature Flags
AI_ENABLE_FILE_DETECTION=true
AI_ENABLE_DATA_EXTRACTION=true
AI_ENABLE_AUTO_MAPPING=true
AI_ENABLE_DATA_QUALITY_CHECK=true

# AI Parameters
AI_CONFIDENCE_THRESHOLD=0.8
AI_MAX_RETRIES=3
AI_TIMEOUT_SECONDS=60
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@accusync.com

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
